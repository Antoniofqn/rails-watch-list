<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url( <%= cl_image_path @list.photo.key, height: 300, width: 400, crop: :fill %> )">
  <div class="container">
    <h1><%= @list.name %></h1>
  </div>
</div>

<ul>
  <% @list.bookmarks.each do |bookmark| %>
    <li><%= bookmark.movie.title %></li>
    <%= link_to "Delete", bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure?"} %>
    <li><%= bookmark.comment %></li>
  <% end %>
</ul>


<%= link_to "Add Movie to this list", new_list_bookmark_path(@list) %>
<%= link_to "Back", lists_path %>
